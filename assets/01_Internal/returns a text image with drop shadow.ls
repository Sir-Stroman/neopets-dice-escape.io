on getdropshadowtext text_member, shadow_offset, text_color, shadow_color, alpha_color  image_txt = image(text_member.width + shadow_offset, text_member.height + shadow_offset, 16)  image_txt.fill(0, 0, image_txt.width, image_txt.height, alpha_color)  text_member.color = shadow_color  text_image = text_member.image  dest_rect = rect(shadow_offset, shadow_offset, text_member.width + shadow_offset, text_member.height + shadow_offset)  source_rect = text_member.rect  image_txt.copyPixels(text_image, dest_rect, source_rect)  text_member.color = text_color  text_image = text_member.image  dest_rect = rect(0, 0, text_member.width, text_member.height)  image_txt.copyPixels(text_image, dest_rect, source_rect)  return image_txtend