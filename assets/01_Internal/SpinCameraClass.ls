property pcamera, pNullObj, deleteMeglobal gActorson new me, cam, camNull  pcamera = cam  pNullObj = camNull  deleteMe = 0  pcamera.parent = pNullObj  gActors.append(me)  return meendon focusOn me, m  pos = m.worldPosition  pcamera.pointAt(pos)endon rotatecamera me, amt  pNullObj.rotate(0, amt, 0)endon step me  me.rotatecamera(2)endon stopStep me  deleteMe = 1end