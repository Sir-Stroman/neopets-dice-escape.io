property pStartTime, pTimeLimit, pListener, pNumSecondsLeft, pLastSecondNum, deleteMeglobal gScoreboard, gActorson new me, timeLimit, listener  pStartTime = the milliSeconds  deleteMe = 0  pTimeLimit = timeLimit  pListener = listener  gActors.append(me)  return meendon step me  now = the milliSeconds  elapsed = now - pStartTime  pNumSecondsLeft = integer((pTimeLimit - elapsed) / 1000)  if pNumSecondsLeft <> pLastSecondNum then    gScoreboard.updateTime()    pLastSecondNum = pNumSecondsLeft  end if  if elapsed > pTimeLimit then    pListener.timeOver()    me.stopTimer()  end ifendon resetTimer me  pStartTime = the milliSecondsendon getNumSecondsLeft me  return pNumSecondsLeftendon stopStepFrame me  deleteMe = 1endon stopTimer me  me.stopStepFrame()end