global gmenu, gCursorStateon menupressed  if gmenu.pRotating = 1 then    return   end if  mouse_row = the mouseV / 16  mouse_col = the mouseH / 16  if gmenu.pframe = "menuframe" then    if (mouse_row > 15) and (mouse_row < 19) and (mouse_col > 2) and (mouse_col < 17) then      cursor(280)      gCursorState = 280      if the mouseDown then        gmenu.onbuttonpressed("start")        cursor(-1)        gCursorState = -1      end if    else      if (mouse_row > 20) and (mouse_row < 25) and (mouse_col > 1) and (mouse_col < 19) then        cursor(280)        gCursorState = 280        if the mouseDown then          gmenu.onbuttonpressed("instructions")          cursor(-1)          gCursorState = -1        end if      else        cursor(-1)        gCursorState = -1      end if    end if  else    if gmenu.pframe = "instructionsframe" then      if (mouse_row > 24) and (mouse_row < 27) and (mouse_col > 7) and (mouse_col < 13) then        cursor(280)        gCursorState = 280        if the mouseDown then          gmenu.onbuttonpressed("back")          cursor(-1)          gCursorState = -1        end if      else        if gCursorState <> -1 then          cursor(-1)          gCursorState = -1        end if      end if    end if  end ifend