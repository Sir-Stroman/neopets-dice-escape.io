global gGame, gshowretry, gCursorStateon onscoreboardclicked  mouse_row = the mouseV / 47  mouse_col = the mouseH / 120  if (mouse_row = 0) and (mouse_col = 3) then    if the mouseDown then      gGame.endgamepressed()      cursor(-1)      gCursorState = -1    else      cursor(-1)      cursor(280)      gCursorState = 280    end if  else    if (mouse_row = 1) and (mouse_col = 3) and (gshowretry = 1) then      if the mouseDown then        gGame.retrypressed()        cursor(-1)        gCursorState = -1      else        cursor(-1)        cursor(280)        gCursorState = 280      end if    else      if gCursorState <> -1 then        cursor(-1)        gCursorState = -1      end if    end if  end ifend