on getbuttonwithtext text_member, text_color, button_img, alpha_color  image_img = image(button_img.width, button_img.height, 32)  image_img.fill(0, 0, image_img.width, image_img.height, alpha_color)  image_img.copyPixels(button_img, button_img.rect, button_img.rect, [#ink: 36])  text_member.color = text_color  text_image = text_member.image  xStart = (button_img.width / 2) - (text_image.width / 2)  yStart = (button_img.height / 2) - (text_image.height / 2)  dest_rect = rect(xStart, yStart, text_image.width + xStart, text_image.height + yStart)  source_rect = text_image.rect  image_img.copyPixels(text_image, dest_rect, source_rect)  return image_imgend